{
    "name": "jimmerioles/bitcoin-currency-converter-php",
    "description": "A simple and lightweight bitcoin to currency converter and vice versa based on current exchange rates from your chosen provider: Coinbase, Coindesk, Bitpay and etc.",
    "type": "library",
    "keywords": [
        "bitcoin",
        "currency",
        "converter",
        "coinbase",
        "coindesk",
        "bitpay",
        "cryptocurrency"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jim Merioles",
            "email": "jimwisleymerioles@gmail.com"
        }
    ],
    "require": {
        "php": "8.0.*",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/cache": "^9.0",
        "illuminate/filesystem": "^9.0",
        "composer/composer": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.0",
        "rector/rector": "^1.2",
        "laravel/pint": "1.5.*",
        "phpstan/phpstan": "^1.12",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/extension-installer": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Jimmerioles\\BitcoinCurrencyConverter\\": "src/"
        },
        "files": [
            "src/Util/currency_code_checker_helper.php",
            "src/Util/currency_formatter_helper.php",
            "src/Util/converter_helper.php",
            "src/Util/path_helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "lint": "pint",
        "refactor": "rector",
        "test:lint": "pint --test",
        "test:phpunit": "phpunit",
        "test:refactor": "rector --dry-run",
        "test:type:check": "phpstan analyse --ansi --memory-limit=-1 --debug",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:type:check",
            "@test:phpunit"
        ]
    }
}